set shell sh
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set icons
set cursorpreviewfmt "\033[7;90m"

map <enter> shell
set previewer "~/.config/lf/scope"
set cleaner "~/.config/lf/cleaner"

${{
    w=$(tput cols)
    if [ $w -le 80 ]; then
        lf -remote "send $id set ratios 1:2"
    elif [ $w -le 160 ]; then
        lf -remote "send $id set ratios 1:2:3"
    else
        lf -remote "send $id set ratios 1:2:3:5"
    fi
}}
